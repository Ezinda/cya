                                    <label>@Html.LabelFor(x => x.TipoDocumentoId)</label>
                                </div>
                                <div class="ez_form_control_wrapper">
                                    <div class="autocomplete-control ui-front">
                                        @Html.DropDownList("TipoDocumentoId", Model.TipoDocumentos)
                                        @Html.ValidationMessageFor(model => model.TipoDocumentos, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                    @*<input type="hidden" id="@Html.IdFor(x => x.TipoDocumentoId)" value="@Model.TipoDocumentoId">
                                   <div class="autocomplete-control ui-front">
                                        <input id="tipoDocumentoId_autocomplete" class="ez_form_required" 
                                               autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" >
                                        <span class="dropdown_button" id="tipoDocumentoId_dropdown">
                                            <img draggable="false" src="~/Content/images/dropdown-arrow.png">
                                        </span>
                                    </div>*@
                                @*</div>*@
                            </div>
                            <div class="ez_form_field">
                                <div class="ez_form_label_wrapper">
                                    @Html.LabelFor(x => x.Documento)
                                </div>
                                <div class="ez_form_control_wrapper">
                                    <input id="@Html.IdFor(x => x.Documento)" type="text" value="@Model.Documento"/>
                                </div>
                            </div>
                            <div class="ez_form_field">
                                <div class="ez_form_label_wrapper">
                                    @Html.LabelFor(x => x.Domicilio)
                                </div>
                                <div class="ez_form_control_wrapper">
                                    <input id="@Html.IdFor(x => x.Domicilio)" type="text" value="@Model.Domicilio"/>
                                </div>
                            </div>
                            <div class="ez_form_field">
                                <div class="ez_form_label_wrapper">
                                    @Html.LabelFor(x => x.Telefono)
                                </div>
                                <div class="ez_form_control_wrapper">
                                    <input id="@Html.IdFor(x => x.Telefono)" type="text" value="@Model.Telefono"/>
                                </div>
                            </div>
                            <div class="ez_form_field">
                                <div class="ez_form_label_wrapper">
                                    @Html.LabelFor(x => x.Celular)
                                </div>
                                <div class="ez_form_control_wrapper">
                                    <input id="@Html.IdFor(x => x.Celular)" type="text" value="@Model.Celular"/>
                                </div>
                            </div>
                            <div class="ez_form_field">
                                <div class="ez_form_label_wrapper">
                                    @Html.LabelFor(x => x.Email)
                                </div>
                                <div class="ez_form_control_wrapper">
                                    <input id="@Html.IdFor(x => x.Email)" type="text" value="@Model.Email"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="grid-col-2"></div>
            </div>
        </div>
    </div>
}

<div class="modal-footer">
    <button type="button" id="save">Guardar</button>
