@model mvc.ViewModels.ClienteFormModel


@{
    ViewBag.Title = "Cliente";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h3 class="modal-title" id="title">Editar Cliente</h3>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Codigo)
    @Html.HiddenFor(model => model.CreatedDate)
    <div class="modal-body">
        <div class="grid-layout">
            <div class="grid-row">
                <div class="grid-col-2"></div>
                <div class="grid-col-8">
                    <div class="ez_form_group">
                        <div class="ez_form_col">
                            <div class="ez_form_field">
                                <div class="ez_form_label_wrapper">
                                    @Html.LabelFor(x => x.RazonSocial)
                                </div>
                                <div class="ez_form_control_wrapper">
                                    <input id="@Html.IdFor(x => x.RazonSocial)" type="text" value="@Model.RazonSocial"/>
                                </div>
                            </div>
                            <div class="ez_form_field">
                                <div class="ez_form_label_wrapper">
                                    @Html.LabelFor(x => x.Apellido)
                                </div>
                                <div class="ez_form_control_wrapper">
                                    <input id="@Html.IdFor(x => x.Apellido)" type="text" value="@Model.Apellido"/>
                                </div>
                            </div>
                            <div class="ez_form_field">
                                <div class="ez_form_label_wrapper">
                                    @Html.LabelFor(x => x.Nombre)
                                </div>
                                <div class="ez_form_control_wrapper">
                                    <input id="@Html.IdFor(x => x.Nombre)" type="text" value="@Model.Nombre"/>
                                </div>
                            </div>
                            <div class="ez_form_field">
