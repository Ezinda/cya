@model ceya.Model.Models.Usuario

@{
    Layout = null;
}
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    
    <title>Login</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/Content/BackgroundLogin.css" rel="stylesheet" />
</head>
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
<body>
    <div class="container">
        <form class="form-signin">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-4 col-lg-offset-4">
                        <div class="input-group">
                            <h2 class="form-signin-heading">Gestión Comercial  Ce&a</h2>
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control nombre", @name = "username", @placeholder = "Usuario"} })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger " })
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control password", @name = "password", @type = "password", @placeholder = "Contraseña" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Ingresar</button>
                        </div><!-- /input-group -->
                    </div><!-- /.col-lg-4 -->
                </div><!-- /.row -->
            </div><!-- /.row -->
       </form>
    </div> <!-- /container -->
</body>
}
</html>
